{ lib, config, ... }:
let cfg = config.iconTheme;
in
{
  options.iconTheme = {
    package = lib.mkOption {
      description = "The package that provides the icons";
      default = null;
      type = lib.types.nullOr lib.types.package;
    };
    name = lib.mkOption {
      description = "the name of the icon set from the package";
      type = lib.types.str;
    };
  };
}