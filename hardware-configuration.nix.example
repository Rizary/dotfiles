    };

  fileSystems."/home" =
    { device = "/dev/disk/by-uuid/41ec78c0-6142-461b-be59-89e9f71f242d";
      fsType = "ext4";
    };

  boot.initrd.postDeviceCommands = lib.mkMerge [
    ( lib.mkBefore ''
        mkdir -m 0755 -p ${keyMountPoint}
        echo -n "Waiting for key device to appear.."
        while [ ! -e "${secure}" ]
          do
            echo -n "."
            sleep 0.25
          done
        echo -n " done!"
        echo
        mount -n \
          -t ext4 \
          -o ro \
          "${secure}" ${keyMountPoint}
      ''
    )
    ( lib.mkAfter ''
        echo "Closing key device..."
	umount ${keyMountPoint}
	rmdir ${keyMountPoint}
      ''
    )
  ];

  boot.initrd.luks.devices."enc" = {
    device = "/dev/sdb3";
    keyFile = keyMountPoint + keyPath;
    header = keyMountPoint + headerPath;
    preLVM = false;
  };
  
  swapDevices =
    [ { device = "/dev/disk/by-uuid/836f8914-43a1-45ee-85de-1a7e32494011"; }
    ];

  nix.maxJobs = lib.mkDefault 8;
  powerManagement.cpuFreqGovernor = lib.mkDefault "powersave";
}
